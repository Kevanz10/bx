<div class="container">
  <br>
  <br>
  <h4 class="text-center">
    <%if current_user.email == @chat.sender.email%>
      <i class="fa fa-user-o" aria-hidden="true"></i> <%=@chat.recipient.email.capitalize%> 
    <%else%>
      <i class="fa fa-user-o" aria-hidden="true"></i> <%=@chat.sender.email.capitalize%>
    <%end%>
  </h4>
  <br>
  <div class="row" id="messages">
    <div class="ui segment">
      <% @messages.each do |message| %>
        <% if message.body %>
          <% user = User.find(message.user_id) %>
          <div class="item">
            <div class="content">
              <div class="header"><strong><%= user.email %></strong> <%= message.message_time %></div>
              <div class="list">
                <div class="item">
                  <%= message.body %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <%=form_for [@chat, @message] do |f|%>
    <div class="field">
      <%= f.text_area :body, class: "form-control body-input", data: {textarea: "message"} %>
    </div>
      <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
    <div class="text-center">
      <%= f.button :submit, class: "ui blue labeled submit icon button responder text-center", data: {send: "message"} do %>
        <p>Enviar mensaje
          <i class="fa fa-paper-plane-o" aria-hidden="true"></i>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<br>