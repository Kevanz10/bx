       
<div class="transactions-container col-md-10 col-md-offset-1">
    <div class="panel-transactions panel-secondary">
        <div class="panel-heading">
            <h3 class="panel-title">Transaction <%= transaction.id %></h3>
        </div>
        <table class="table table-condensed table-responsive table-user-information">
            <tbody>
            <tr>
                <td>Value:</td>
                <td><%= transaction.value %></td>
            </tr>
            <tr>
                <td>Time remaining:</td>
                <td>23 Hours</td>
            </tr>
            <tr>
                <td>Status:</td>
                <% if transaction.status%>
                    <td>Completed</td>
                <% else  %>
                    <td>Pending </td>
                <% end%>
            </tr>
            <tr>
                <td>Sender name:</td>
                <td><%= User.find(transaction.sender_id).name %></td>
            </tr>

            <tr>
                <td>Sender phone:</td>
                <td><%= User.find(transaction.sender_id).phone %></td>
            </tr>

            <tr>
                <td>Sender email:</td>
                <td><%= User.find(transaction.sender_id).email %></td>
            </tr>
            <tr>
                <td>Sender wallet</td>
                <td><%= User.find(transaction.sender_id).btc %></td>
            </tr>
            
            </tbody>
        </table>
        <div class="buttons-container col-md-12"> 
        <div class="col-md-6">
            <button class="btn btn-primary" type="button">
            Message User
            <i class="icon-envelope icon-white"></i>
            </button>
        </div>
        <div class="col-md-6">
            <div class="">
                <button class="btn btn-warning dropdown-toggle btn-success" type="button"
                data-toggle="dropdown">
                Check receipt <i class="icon-edit icon-white"></i>
                </button>
                
            </div>
        </div>
         <div class="col-md-8 col-md-offset-2" style="margin-top:15px;">
            <div class="">
                <button class="btn btn-info dropdown-toggle" type="button"
                data-toggle="dropdown">
                Confirm transaction <i class="icon-check icon-white"></i>
                </button>
                
            </div>
        </div>
        </div> 
