<div class="ui segment">
  <h3>Mailbox</h3>

  <div class="ui list">
    <div class="item">
      <% @chats.each do |chat| %>
        <% if chat.sender_id == current_user.id || chat.recipient_id == current_user.id %>
          <% if chat.sender_id == current_user.id %>
            <% recipient = User.find(chat.recipient_id) %>
          <% else %>
            <% recipient = User.find(chat.sender_id) %>
          <% end %>
          <%= link_to recipient.email, chat_messages_path(chat)%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="ui segment">
  <h3>All Users</h3>
  <div class="ui list">
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
      <div class="item">
        <%= user.email %> 
        <%= link_to 'Message me!', chats_path(sender_id: current_user.id, recipient_id: user.id), method: :post%>
        <%= button_to 'Iniciar conversacion', chats_path(sender_id: current_user.id, recipient_id: user.id), :method=>:post, :remote => true%>

      </div>
      <% end %>
    <% end %>
  </div>
</div>